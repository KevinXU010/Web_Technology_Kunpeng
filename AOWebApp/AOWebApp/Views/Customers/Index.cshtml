@model IEnumerable<AOWebApp.Models.Customer>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
}

<div class="bg-secondary-subtle py-1 px-2 mb-2 rounded">
    <h1 class="text-center">Customer Search</h1>
</div>

<form asp-action="Index" method="get" class="row g-2 mb-3">
    <div class="col-md-5">
        <input id="SearchText" name="SearchText" class="form-control"
               value="@ViewBag.SearchText" placeholder="Customer name..." />
    </div>
    <div class="col-md-4">
        <select id="Suburb" name="Suburb" class="form-select" asp-items="ViewBag.SuburbList">
            <option value="">All Suburbs...</option>
        </select>
    </div>
    <div class="col-md-3">
        <button class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-1">Create New</a>
    </div>
</form>

