@model AOWebApp.Models.ViewModels.ItemSearchViewModel
@{
    ViewData["Title"] = "Index";

}
<div class="bg-secondary-subtle py-1 px-2 mb-2 rounded">
    <h1 class="text-center">Shop Items</h1>
</div>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>

<form asp-controller="Items" asp-action="Index" method="post">
    <div>
        <label for="searchText">Item Search:</label>
        <input asp-for="SearchText" class="form-control" placeholder="Type here..." title="Search by item name. Max 100 chars." /> 
        <span asp-validation-for="SearchText" class="text-danger"></span>
        <br />

        <button type="submit" class="btn btn-outline-info">Search</button>
        <a asp-action ="index" class="btn btn-danger">Reset</a>
        <br />

        <select asp-for="CategoryId" class="form-control" asp-items="Model.CategoryList">
            <option value="">All Categories...</option>
        </select>
        
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(Model.SearchText) || Model.CategoryId.HasValue)
{
    <p>Your search returned @Model.ItemList.Count matching item@(Model.ItemList.Count != 1 ? "s" : "")</p>
}
else
{
    <p>Showing @Model.ItemList.Count items</p>
}


