<div class="row  justify-content-center">
    @foreach (var item in Model.ItemList)
    {
       
        <div class="card col-3 m-1">
            <div class="card-body">
                <h5 class="card-title" style="font-weight: bold;">@item.ItemName</h5>
                <p>Category:  @item.CategoryName</p>
                <p class="card-text">Description: @item.ItemDescription</p>
                <p>Cost: @item.ItemCost $</p>
                <p>Rating: @item.RatingText</p>
                <img src="@item.ItemImage" class="card-img-bottom"  alt="@item.ItemName image" />
                
            </div>
            <div><a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ItemId">View Item Detail</a> </div><br/>
          
            
        </div>
    }
</div>